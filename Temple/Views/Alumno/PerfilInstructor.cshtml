            e.preventDefault();
            pasoActual = 1;
            // Selecciono la pestaña de cursos
            $("#tab2").prop("checked", true);

            //Configuro el botón y texto del overlay
            $("#txtOverlay").text("Primero, selecciona el curso que deseas y presiona Siguiente");

            // Para el overlay
            $('#pestanasCursos').css('z-index', '99998');
