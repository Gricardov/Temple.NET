                }
                else if (mom.weekday() === 5) {
                    return 'Viernes';
                }
                else if (mom.weekday() === 6) {
                    return 'Sábado';
                }
                else if (mom.weekday() === 0) {
                    return 'Domingo';
                }
                else {
                    return mom.format('LLL');
                }
