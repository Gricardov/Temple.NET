<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="~/Content/jquery-3.3.1.js" type="text/javascript"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="~/Content/bootstrap.min.js"></script>

    <script src="~/Content/jquery.cycle2.js" type="text/javascript"></script>

    <script src="~/Content/jquery.cycle2.carousel.js" type="text/javascript"></script>
    <script src="~/Content/scriptPerfil.js" type="text/javascript"></script>

    <!--Moment js-->
    <script src="~/Content/moment.js" type="text/javascript"></script>

    <!--El pobre y triste mapa leaflet-->

    <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"
            integrity="sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA=="
            crossorigin=""></script>
    <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>


    <link rel="stylesheet" href="~/Content/estilo.css" />
    <link rel="stylesheet" href="~/Content/font-awesome-4.7.0/css/font-awesome.css" />

    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
          integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
          crossorigin="" />

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css">

</head>

<body>

    <nav class="navbar navbar-inverse" style="margin-bottom:0px;">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                

                @if (ViewBag.usuario.idRol == 1)
                {
                    <a href="@Url.Action("Inicio","Instructor")"><img src="~/imagenes/logo.png" class="logo" /></a>

                }
                else
                {
                    <a href="@Url.Action("Inicio","Alumno")"><img src="~/imagenes/logo.png" class="logo" /></a>


                }

            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                               
                <ul class="nav navbar-nav navbar-right">
                    <li>


                        @if (ViewBag.usuario.idRol == 1)
                        {

                            <a href="@Url.Action("MiPerfil","Instructor")">@ViewBag.usuario.nombres @ViewBag.usuario.apPaterno</a>
                        <li>
                            <a href="@Url.Action("MiPerfil","Instructor")">
                                <img src="~/imagenes/perfiles/@(ViewBag.usuario.codigo).jpg" class="img-circle" alt="fotoperfil" width="25" height="25">
                            </a>
                            
                        </li>

                    }
                    else
                    {
                        <a href="@Url.Action("MiPerfil","Alumno")">@ViewBag.usuario.nombres @ViewBag.usuario.apPaterno</a>
                        <li>
                            <a href="@Url.Action("MiPerfil","Alumno")">
                                <img src="~/imagenes/perfiles/@(ViewBag.usuario.codigo).jpg" class="img-circle" alt="fotoperfil" width="25" height="25">
                            </a>

                        </li>


                    }

                        </li>


                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img src="~/imagenes/iconochat.png" alt="iconochat" width="25" height="25"></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Chat","Chat")">Abrir mensajes</a></li>

                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
                            @if (ViewBag.usuario.idRol == 1)
                            {
                                @Html.Partial("~/Views/Shared/_MenuInstructor.cshtml")
                            }
                            else if (ViewBag.usuario.idRol == 2)
                            {

                                @Html.Partial("~/Views/Shared/_MenuAlumno.cshtml")

                            }
                        </li>
                    </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container" id="marco">

        <section>
            @RenderBody()
        </section>
    </div>

</body>
</html>